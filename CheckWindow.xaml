<Window x:Class="WpfImageProcess.CheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CheckWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Command="{Binding BrowseCommand}" Margin="5"/>
            <Button Content="Browse1" Command="{Binding Browse1Command}" Margin="5"/>
            <Button Content="Filter" Command="{Binding FilterCommand}" Margin="5"/>
            <Button Content="Check" Command="{Binding CheckCommand}" Margin="5"/>
        </StackPanel>

        <Image Source="{Binding Img}" Grid.Row="1"/>
    </Grid>
</Window>